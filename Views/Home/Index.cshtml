@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-image: url("https://cdn.wallpapersafari.com/2/4/qOWu0H.jpg"); /*linear-gradient(135deg, #1A73E8, #0D47A1);*/
        color: white;
        text-align: center;
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .header-logo img {
        width: 220px; /* BIG LOGO */
        margin-top: 40px;
    }

    .main-section {
        margin-top: 40px;
    }

    h1 {
        font-size: 48px; /* BIG HEADING */
        font-weight: 800;
        margin-bottom: 10px;
        color:black;
    }

    h3 {
        font-size: 24px; /* BIG SUB TEXT */
        font-weight: 400;
        margin-bottom: 40px;
        opacity: 0.9;
        color:black;
    }

    .btn-large {
        padding: 15px 40px; /* BIG BUTTONS */
        font-size: 20px;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        margin: 10px;
        width: 200px;
    }

    .btn-register {
        background-color: #34A853;
        color: white;
    }

    .btn-login {
        background-image: url("https://www.shutterstock.com/image-illustration/business-technology-internet-network-concept-260nw-2354528539.jpg");
        color: white;
    }

    .btn-register:hover {
        background-color: #2C8C46;
    }

    .btn-login:hover {
        background-color: #1669BB;
    }
</style>


<div class="header-logo">
    <img src="~/images/Acxiom.jpeg" alt="Acxiom Logo" />
</div>

<div class="main-section">
    <h1>Welcome to Acxiom Consulting</h1>
    <h3>Empowering Businesses with Technology, Strategy & Innovation</h3>

    <a href="/Authentication/Register">
        <button class="btn-large btn-register">Register</button>
    </a>
    <a href="/Authentication/Login">
        <button class="btn-large btn-login">Login</button>
    </a>
</div>
