@{
}
@model ShaluAcxiom.Models.Employee

<div class="container mt-4">
    <div class="card shadow-sm p-4 text-center">
        <h2 class="text-danger">Are you sure?</h2>
        <p class="mt-3">You want to delete employee:</p>

        <h4>@Model.EmployeeName</h4>
        <p>(@Model.Email)</p>

        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.EmployeeId">

            <input type="hidden" asp-for="EmployeeId" />

            <button class="btn btn-danger" type="submit">Yes, Delete</button>
            <a href="/Employee" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
